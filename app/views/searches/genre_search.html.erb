<div class="container">
  <div class="row">
     <div class="col-lg-3">
      <%= render 'searches/genre.html.erb' %>
    </div>
    <div class=col-lg-3>
      <h2><b>検索結果</b></h2>
      <div class="row">
      <% @items.each do |item| %>
        <div class="col-lg-3">
          <div class="mb-2">
            <%= link_to item_path(item.id),class:"item__name" do %>
            <%= image_tag item.get_image(180,140) %>
            <% end %>
          </div>

          <div class="mb-1"><b><%= item.name %></b></div>
          <div class="mb-1"><b>¥<%= item.add_tax_excluding_tax.to_s(:dalimited) %></b></div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>


<style>
.item__name{
   text-decoration: none;
}

</style>