<h2>注文履歴一覧</h2>

<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
  <% @order.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime("%Y/%m/%d %H:%M") %></td>
      <td><%= order.customer.family_name %><%= order.customer.first_name %></td>
      <td><%= order.customer.cart_items.sum(:quantity) %></td>
      <td>
        <%= form_with model: order, url: admin_homes_top_path(order), method: :patch do |f| %>
        <%= f.select :status, Order.statuses, class: "form-control" %>
        <%= f.submit "更新", class: "btn btn-primary" %>
        <% end %>
      </td>
    </tr>
  <% end %>
 </tbody>
</table>