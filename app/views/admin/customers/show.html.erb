<div class="container">

  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-4">
      <br>
      <h5><b><%= @customer.family_name+@customer.first_name %></b>さんの会員詳細</h5>
      <br>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-6">
      <table class="table table-striped">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <td>氏名</td>
          <td><%= @customer.family_name+@customer.first_name %></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td><%= @customer.family_name_kana+@customer.first_name_kana %></td>
        </tr>

        <tr>
          <td>郵便番号</td>
          <td><%= @customer.post_code %></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>

        <tr>
          <td>会員ステータス</td>
          <% if @customer.is_deleted == false %>
             <td>有効</td>
          <% else %>
             <td>退会</td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-2">
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'btn btn-success' %>
    </div>
    <div class="col-lg-4">
      <%= link_to "注文履歴一覧を見る", admin_homes_top_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>