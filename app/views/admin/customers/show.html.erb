<p><%= @customer.family_name + @customer.first_name %>さんの会員詳細</p>

<tr>
  <td>会員ID</td>
  <td><%= @customer.id %></td>
</tr>

<tr>
  <td>氏名</td>
  <td><%= @customer.family_name.first_name %></td>
</tr>

<tr>
  <td>フリガナ</td>
  <td><%= @customer.family_name_kana.first_name_kana %></td>
</tr>

<tr>
  <td>郵便番号</td>
  <td><%= @customer.post_code %></td>
</tr>

<tr>
  <td>住所</td>
  <td><%= @customer.adress %></td>
</tr>

<tr>
  <td>電話番号</td>
  <td><%= @customer.telephone_number %></td>
</tr>

<tr>
  <td>メールアドレス</td>
  <td><%= @customer.email %></td>
</tr>

<tr>
  <% if @customer.is_deleted == false %>
     <p>有効</p>
  <% else %>
     <p>退会</p>
  <% end %>
</tr>

