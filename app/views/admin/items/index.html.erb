


<div class="container">
  <div class="row">
    <div class="col-10">
      <h1>商品一覧</h1>
    </div>
    <div class="col-2">
      <%= link_to  '＋', new_admin_item_path, class:"btn btn-secondary"%>
    </div>
  </div>





  <div class="row">
    <div class="col-12">
      <table class="table table-striped">
        <tr class="thead-light">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.excluding_tax %></td>
          <td><%= item.genre.name %></td>
            <% if item.is_sale_status == true %>
              <td class="text-success"><b>販売中</b></td>
            <% else item.is_sale_status != true %>
              <td class="text-secondary"><b>販売停止中</b></td>
            <% end %>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-4"></div>
    <div class="col-4">
      <%= paginate @items %>
    </div>
    <div class="col-4"></div>
  </div>
</div>