<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <br>
      <h5><b>商品詳細</b></h1>
      <br>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
      <br>
      <p><%= image_tag @item.get_image(200,200) %></p>
    </div>
    <div class="col-1"></div>
    <div class="col-7">
      <table class="table ml-auto">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.explanation %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格(税抜価格)</td>
          <td><%= @item.add_tax_excluding_tax.to_s(:dalimited) %>
            (<%= @item.excluding_tax %>) 円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_sale_status == true %>
              販売中
            <% else @item.is_sale_status != true %>
              販売停止中
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= link_to "編集する", edit_admin_item_path(@item.id) %></td>
        </tr>
      </table>
    </div>
  </div>
</div>