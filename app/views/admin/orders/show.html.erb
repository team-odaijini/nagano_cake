
<h3>注文履歴詳細</h3>

<table class="table">
      <tr>
        <td>購入者</td>
        <td><%= @order.name %></td>
      </tr>
      <tr>
        <td>注文日</td>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td>〒<%= @order.post_code + "　" + @order.residence + "　" + @order.name %></td>
      </tr>
      <tr>
        <td>支払い方法</td>
            <% if @order.payment_method == "credit_card" %>
              <td>クレジットカード</td>
            <% else @order.payment_method != "credit_card" %>
              <td>銀行振込</td>
            <% end %>
      </tr>
      </tr>
      <tr>
        <td>注文ステータス</td>
        <td><%= form_with model: @order, url: update_status_admin_order_path(@order), method: :patch do |f| %>
          <%= f.select :status, Order.statuses, class: "form-control" %>
          <%= f.submit "更新", class: "btn btn-primary" %>
          <% end %></td>
    </table>
    
     <table class="table">
      <tr>
        <td>商品名</td>
        <td>単価(税込)</td>
        <td>数量</td>
        <td>小計</td>
        <td>製作ステータス</td>
      </tr>
      <% @order_details.each do |order_detail| %>
      <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= (order_detail.item.excluding_tax * 1.10).floor %></td>
      <td><%= order_detail.quantity %></td>
      <td><%= order_detail.quantity * (order_detail.item.excluding_tax * 1.10).floor %></td>
      <td><%= form_with model: order_detail, url: admin_order_details_update_path(order_detail.id), method: :patch do |f| %>
          <%= f.select :production_status, OrderDetail.production_statuses %>
          <%= f.submit "更新", class: "btn btn-primary" %>
          <% end %>
      </td>
    </tr>
    <% end %>
    </table>
    
    <table class="table">
      <tr>
        <td>商品合計</td>
        <td><%= @order.price_all %></td>
      </tr>
      <tr>
        <td>配送料</td>
        <td><%= @order.postage %></td>
      </tr>
      <tr>
        <td>ご請求額</td>
        <td><%= @order.price_all + @order.postage %></td>
      </tr>
    </table>

