<h1>ショッピングカート</h1>

<%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete %>

    <tr>
      <td>商品名</td>
      <td>単価（税込）</td>
      <td>数量</td>
      <td>小計</td>
      <td></td>
    </tr>

<% @cart_items.each do |cart_item| %>

  <%= image_tag cart_item.item.get_image(50,50) %>
  <%= cart_item.item.name %>

  <%= (cart_item.item.excluding_tax * 1.10).floor.to_s(:delimited) %>

   <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
     <%= f.select :quantity, *[1..99], class: 'item' %>
     <%= f.submit"変更" %>
   <% end %>

  <%= ((cart_item.item.excluding_tax * 1.10).floor * cart_item.quantity).to_s(:delimited) %>

  <%= link_to "削除", cart_item_path(cart_item), method: :delete %>


<% end %>

<%= link_to "買い物を続ける", root_path %>

<div>合計金額</div>
<p>¥<%= @total.round.to_s(:delimited)%></p>

