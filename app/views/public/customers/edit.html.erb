<p>会員情報編集</p>

<%= form_with model: @customer, url:customer_path, method: :patch do |f| %>

 <div>
   <%= f.label :"氏名" %>
   <%= f.text_field :family_name,:placeholder => "令和" %>
   <%= f.text_field :first_name,:placeholder => "道子" %>
 </div>
 
 <div>
   <%= f.label :"フリガナ" %>
   <%= f.text_field :family_name_kana,:placeholder => "レイワ" %>
   <%= f.text_field :first_name_kana,:placeholder => "ミチコ" %>
 </div>
 
 <div>
   <%= f.label :"郵便番号" %>
   <%= f.text_field :post_code,:placeholder => "0000000" %>
 </div>
 
 <div>
   <%= f.label :"住所" %>
   <%= f.text_field :address,:placeholder => "東京都千代田区永田町1-7-1", size: 50 %>
 </div>
 
 <div>
   <%= f.label :"電話番号" %>
   <%= f.text_field :telephone_number,:placeholder => "0000000" %>
 </div>
 
 <div>
   <%= f.label :"メールアドレス" %>
   <%= f.text_field :email,:placeholder => "sample@mail" %>
 </div>
 
 <%= f.submit "編集内容を保存" %>
 
 <%= link_to "退会する", customer_customers_leave_path(@customer.id) %>
<% end %>