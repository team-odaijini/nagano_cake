<div class="container">

  <div class="row">
    <div class="col-lg-12">
      <h3><b>マイページ</b></h3>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-lg-1">
      <b>登録情報</b>
    </div>
    <div class="col-lg-2">
      <%= link_to "編集する", edit_customer_path, class:"btn btn-success" %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-lg-6">
      <table class="table table-striped">

        <tr>
          <td>氏名</td>
          <td><%= @customer.family_name%><%= @customer.first_name %></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td><%= @customer.family_name_kana%><%= @customer.first_name_kana %></td>
        </tr>

        <tr>
          <td>郵便番号</td>
          <td><%= @customer.post_code %></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>

      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-1">
      <p>配送先</p>
    </div>
    <div class="col-lg-2">
      <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-lg-1">
      <p>注文履歴</p>
    </div>
    <div class="col-lg-2">
      <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
    </div>
  </div>

</div>
