
<div class="container">
  <div class="row">
    <div class="col-lg-12">


      <section class=address>
      <div class="address__title">
          <div class= address__title__text>配送先登録</div>
      </div>
      <br>
          <%= form_with model:@address, url:addresses_path, method: :post do |f| %>
           <div>
             <td><%= f.label :"郵便番号(ハイフンなし)" %></td><br>
             <td><%= f.text_field :post_code, :placeholder => "0000000" %></td>
           </div>

           <div>
             <td><%= f.label :"住所" %></td><br>
             <td><%= f.text_field :residence, :placeholder => "東京都千代田区永田町１−７−１",size: 50 %></td>
           </div>


          <div>
             <td><%= f.label :"宛名" %></td><br>
             <td><%= f.text_field :name, :placeholder => "dmm" %></td><br>
             <br>
             <td><%= f.submit "新規登録",class: "address__create__button" %></td>
          </div>
        <% end %>
      <br>
      <br>

      <div class="address__title">
          <div class= address__title__text>配送先一覧</div>
      </div>
      <br>
           <tr>
             <th>郵便番号</th>
             <th>住所</th>
             <th>宛名</th>
           </tr>

           <% @addresses.each do |address| %>
             <tr>
               <td><%= address.post_code %></td>
               <td><%= address.residence %></td>
               <td><%= address.name %></td>
               <td><%= link_to "編集する", edit_address_path(address.id) %></td>
               <td><%= link_to "削除する", address_path(address.id), method: :delete %></td>
             </tr>
           <% end %>
      </section>

    </div>
  </div>
</div>










<style>
.address{
    width: 100%;
    margin: 0;
    padding: 0;
}
.address__title{
    width: 30%;
    background-color: antiquewhite;
}
.address__title__text{
     text-align: center;
}
.address__create__button{
    background-color: white;
    transition: 1.0s;
}
.address__create__button:hover{
    background-color: black;
    color: white;
}

</style>